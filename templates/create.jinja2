{% extends 'base.jinja2' %}

{% block subtitle %}Add a new donation{% endblock subtitle %}

{% block content %}
<form method="POST">
	{% if error %}<p>{{ error }}</p>{% endif %}
    <label for="donor">Donor Name:</label><input id="donor" type="text" name="donor">
    <label for="donation">Donation Amount:</label><input id="donation" type="number" name="donation">
    <input type="submit" value="Create Donation">
</form>
{% endblock content %}